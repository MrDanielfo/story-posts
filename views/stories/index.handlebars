<h1>Index Stories</h1>
<div class="row">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{#if user}}
                        <!-- 
                            se usan los 3 corchetes porque la función o helper regresaba un html 
                            Asimismo, se usan los dos puntos para salir del loop y retomar el loop anterior
                            en esta ocasión no se pone true porque ya se declaró
                        --> 
                        {{{editIcon user.id ../user.id  _id }}}
                    
                    {{/if}}
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p class="story-text">{{stripTags (truncate body 150)}}</p>
                    <!-- ver por qué es importante colocar tres corchetes y no dos en algunos casos -->
                    <!-- de esta manera se colocan dos helpers en un campo --> 
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="{{user.firstName}}">
                        <a href="/stories/user/{{user.id}}">{{user.firstName}}</a>   
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/stories/single/{{_id}}" class="btn grey">Read More</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No stories found!</p>
    {{/each}}


</div>